# Импортируем модуль для работы с очередью (для обхода в ширину)
from collections import deque


# Класс для представления узла АВЛ дерева (расширенный узел BST с высотой)
class AVLNode:
    def __init__(self, value):
        self.value = value  # Значение, хранящееся в узле
        self.left = None    # Ссылка на левого потомка (меньшие значения)
        self.right = None   # Ссылка на правого потомка (большие значения)
        self.height = 1     # Высота узла (изначально 1, так как узел - это лист)


# Класс для представления АВЛ дерева (самобалансирующееся бинарное дерево поиска)
class AVLTree:
    def __init__(self):
        self.root = None  # Корневой узел дерева (изначально дерево пустое)

    # Метод для получения высоты узла (нужен для вычисления баланс-фактора)
    def get_height(self, node):
        # Если узел пустой, его высота равна 0
        if node is None:
            return 0  # Возвращаем 0
        # Если узел существует, возвращаем его высоту
        return node.height  # Возвращаем высоту узла

    # Метод для обновления высоты узла на основе высот его потомков
    def update_height(self, node):
        # Высота узла = 1 + максимум из высот левого и правого поддеревьев
        node.height = 1 + max(self.get_height(node.left), self.get_height(node.right))  # Обновляем высоту

    # Метод для вычисления баланс-фактора узла (разница высот правого и левого поддеревьев)
    def get_balance(self, node):
        # Если узел пустой, баланс равен 0
        if node is None:
            return 0  # Возвращаем 0
        # Баланс = высота правого поддерева - высота левого поддерева
        return self.get_height(node.right) - self.get_height(node.left)  # Возвращаем баланс-фактор

    # Метод для правого поворота (используется при перевесе левого поддерева)
    def right_rotate(self, y):
        # y - узел, вокруг которого выполняется поворот
        x = y.left  # x - левый потомок y (станет новым корнем поддерева)
        T2 = x.right  # T2 - правое поддерево x (будет перемещено)
        
        # Выполняем поворот
        x.right = y  # y становится правым потомком x
        y.left = T2  # T2 становится левым потомком y
        
        # Обновляем высоты узлов после поворота
        self.update_height(y)  # Обновляем высоту y
        self.update_height(x)  # Обновляем высоту x
        
        # Возвращаем новый корень поддерева
        return x  # x теперь корень поддерева

    # Метод для левого поворота (используется при перевесе правого поддерева)
    def left_rotate(self, x):
        # x - узел, вокруг которого выполняется поворот
        y = x.right  # y - правый потомок x (станет новым корнем поддерева)
        T2 = y.left  # T2 - левое поддерево y (будет перемещено)
        
        # Выполняем поворот
        y.left = x  # x становится левым потомком y
        x.right = T2  # T2 становится правым потомком x
        
        # Обновляем высоты узлов после поворота
        self.update_height(x)  # Обновляем высоту x
        self.update_height(y)  # Обновляем высоту y
        
        # Возвращаем новый корень поддерева
        return y  # y теперь корень поддерева

    # Рекурсивный метод для вставки нового значения в АВЛ дерево с балансировкой
    def insert(self, value, node=None):
        # Если node не передан, начинаем с корня (первый вызов метода)
        if node is None:
            # Если дерево пустое, создаем корневой узел
            if self.root is None:
                self.root = AVLNode(value)  # Создаем новый узел с заданным значением
                return True  # Возвращаем True, так как вставка успешна
            # Если дерево не пустое, вызываем рекурсивную вставку, начиная с корня
            self.root = self.insert(value, self.root)  # Рекурсивно вставляем и обновляем корень
            return True  # Возвращаем True, так как вставка успешна
        
        # Если значение уже существует в дереве, не добавляем его повторно
        if value == node.value:
            return node  # Возвращаем узел без изменений
        
        # Если новое значение меньше значения текущего узла
        if value < node.value:
            # Если левого потомка нет, создаем новый узел
            if node.left is None:
                node.left = AVLNode(value)  # Создаем новый узел и присваиваем его левому потомку
            else:
                # Если левый потомок есть, рекурсивно вызываем метод для левого поддерева
                node.left = self.insert(value, node.left)
        else:
            # Если новое значение больше значения текущего узла
            # Если правого потомка нет, создаем новый узел
            if node.right is None:
                node.right = AVLNode(value)  # Создаем новый узел и присваиваем его правому потомку
            else:
                # Если правый потомок есть, рекурсивно вызываем метод для правого поддерева
                node.right = self.insert(value, node.right)
        
        # Обновляем высоту текущего узла после вставки
        self.update_height(node)  # Обновляем высоту узла
        
        # Вычисляем баланс-фактор текущего узла
        balance = self.get_balance(node)  # Получаем баланс-фактор
        
        # Случай 1: Левое поддерево перевешивает (Left Left Case)
        if balance < -1 and self.get_balance(node.left) <= 0:
            # Выполняем правый поворот для восстановления баланса
            return self.right_rotate(node)  # Возвращаем результат поворота
        
        # Случай 2: Правое поддерево перевешивает (Right Right Case)
        if balance > 1 and self.get_balance(node.right) >= 0:
            # Выполняем левый поворот для восстановления баланса
            return self.left_rotate(node)  # Возвращаем результат поворота
        
        # Случай 3: Левое-правое поддерево перевешивает (Left Right Case)
        if balance < -1 and self.get_balance(node.left) > 0:
            # Сначала выполняем левый поворот для левого потомка
            node.left = self.left_rotate(node.left)  # Поворачиваем левое поддерево
            # Затем выполняем правый поворот для текущего узла
            return self.right_rotate(node)  # Возвращаем результат поворота
        
        # Случай 4: Правое-левое поддерево перевешивает (Right Left Case)
        if balance > 1 and self.get_balance(node.right) < 0:
            # Сначала выполняем правый поворот для правого потомка
            node.right = self.right_rotate(node.right)  # Поворачиваем правое поддерево
            # Затем выполняем левый поворот для текущего узла
            return self.left_rotate(node)  # Возвращаем результат поворота
        
        # Если баланс в норме, возвращаем узел без изменений
        return node  # Возвращаем узел

    # Метод для вставки списка значений в АВЛ дерево
    def insert_list(self, values):
        """
        Вставляет список значений в дерево.
        
        Args:
            values: Список или итерируемый объект со значениями для вставки
        
        Returns:
            Список результатов вставки (True - успешно, False - значение уже существует)
        """
        results = []
        for value in values:
            result = self.insert(value)
            results.append(result)
        return results

    # Рекурсивный метод для поиска значения в АВЛ дереве
    def search(self, value, node=None):
        # Если node не передан, начинаем с корня (первый вызов метода)
        if node is None:
            node = self.root  # Начинаем поиск с корня
        
        # Если узел пустой (дерево пустое или достигли листа), значение не найдено
        if node is None:
            return False  # Возвращаем False
        
        # Если значение совпадает с значением текущего узла, значение найдено
        if value == node.value:
            return True  # Возвращаем True
        
        # Если искомое значение меньше значения текущего узла
        if value < node.value:
            # Ищем в левом поддереве (там находятся меньшие значения)
            return self.search(value, node.left)
        else:
            # Если искомое значение больше значения текущего узла
            # Ищем в правом поддереве (там находятся большие значения)
            return self.search(value, node.right)

    # Вспомогательный метод для поиска узла с минимальным значением (используется в delete)
    def find_min_node(self, node):
        # Минимальное значение всегда находится в самом левом узле
        # Если левого потомка нет, текущий узел и есть минимальный
        if node.left is None:
            return node  # Возвращаем текущий узел
        
        # Если левый потомок есть, продолжаем поиск влево
        return self.find_min_node(node.left)

    # Рекурсивный метод для удаления значения из АВЛ дерева с балансировкой
    def delete(self, value, node=None):
        # Если node не передан, начинаем с корня (первый вызов метода)
        if node is None:
            # Если дерево пустое, удалять нечего
            if self.root is None:
                return False  # Возвращаем False
            # Вызываем рекурсивное удаление, начиная с корня
            # Обновляем корень, так как он может измениться после удаления и балансировки
            old_root_exists = self.root is not None  # Сохраняем информацию о существовании корня
            self.root = self.delete(value, self.root)  # Рекурсивно удаляем и обновляем корень
            return old_root_exists  # Возвращаем True, если корень существовал
        
        # Если узел пустой (значение не найдено или достигли листа), возвращаем None
        if node is None:
            return None  # Возвращаем None
        
        # Если удаляемое значение меньше значения текущего узла
        if value < node.value:
            # Рекурсивно удаляем из левого поддерева
            node.left = self.delete(value, node.left)  # Обновляем левое поддерево
        # Если удаляемое значение больше значения текущего узла
        elif value > node.value:
            # Рекурсивно удаляем из правого поддерева
            node.right = self.delete(value, node.right)  # Обновляем правое поддерево
        else:
            # Нашли узел для удаления (value == node.value)
            
            # Случай 1: у узла нет левого потомка
            if node.left is None:
                return node.right  # Заменяем узел на правого потомка
            
            # Случай 2: у узла нет правого потомка
            elif node.right is None:
                return node.left  # Заменяем узел на левого потомка
            
            # Случай 3: у узла есть оба потомка
            else:
                # Находим минимальное значение в правом поддереве (преемник)
                successor = self.find_min_node(node.right)  # Находим преемника
                # Заменяем значение текущего узла на значение преемника
                node.value = successor.value  # Копируем значение преемника
                # Удаляем преемника из правого поддерева
                node.right = self.delete(successor.value, node.right)  # Удаляем преемника
        
        # Если узел был удален (вернули None), не нужно обновлять высоту
        if node is None:
            return None
        
        # Обновляем высоту текущего узла после удаления
        self.update_height(node)  # Обновляем высоту узла
        
        # Вычисляем баланс-фактор текущего узла
        balance = self.get_balance(node)  # Получаем баланс-фактор
        
        # Случай 1: Левое поддерево перевешивает (Left Left Case)
        if balance < -1 and self.get_balance(node.left) <= 0:
            # Выполняем правый поворот для восстановления баланса
            return self.right_rotate(node)  # Возвращаем результат поворота
        
        # Случай 2: Правое поддерево перевешивает (Right Right Case)
        if balance > 1 and self.get_balance(node.right) >= 0:
            # Выполняем левый поворот для восстановления баланса
            return self.left_rotate(node)  # Возвращаем результат поворота
        
        # Случай 3: Левое-правое поддерево перевешивает (Left Right Case)
        if balance < -1 and self.get_balance(node.left) > 0:
            # Сначала выполняем левый поворот для левого потомка
            node.left = self.left_rotate(node.left)  # Поворачиваем левое поддерево
            # Затем выполняем правый поворот для текущего узла
            return self.right_rotate(node)  # Возвращаем результат поворота
        
        # Случай 4: Правое-левое поддерево перевешивает (Right Left Case)
        if balance > 1 and self.get_balance(node.right) < 0:
            # Сначала выполняем правый поворот для правого потомка
            node.right = self.right_rotate(node.right)  # Поворачиваем правое поддерево
            # Затем выполняем левый поворот для текущего узла
            return self.left_rotate(node)  # Возвращаем результат поворота
        
        # Если баланс в норме, возвращаем узел без изменений
        return node  # Возвращаем узел

    # Рекурсивный метод для поиска минимального значения в дереве
    def find_min(self, node=None):
        # Если node не передан, начинаем с корня (первый вызов метода)
        if node is None:
            # Если дерево пустое, минимального значения нет
            if self.root is None:
                return None  # Возвращаем None
            # Вызываем рекурсивный поиск минимума, начиная с корня
            return self.find_min(self.root)
        
        # Минимальное значение всегда находится в самом левом узле
        # Если левого потомка нет, текущий узел и есть минимальный
        if node.left is None:
            return node.value  # Возвращаем значение текущего узла
        
        # Если левый потомок есть, продолжаем поиск влево
        return self.find_min(node.left)

    # Рекурсивный метод для поиска максимального значения в дереве
    def find_max(self, node=None):
        # Если node не передан, начинаем с корня (первый вызов метода)
        if node is None:
            # Если дерево пустое, максимального значения нет
            if self.root is None:
                return None  # Возвращаем None
            # Вызываем рекурсивный поиск максимума, начиная с корня
            return self.find_max(self.root)
        
        # Максимальное значение всегда находится в самом правом узле
        # Если правого потомка нет, текущий узел и есть максимальный
        if node.right is None:
            return node.value  # Возвращаем значение текущего узла
        
        # Если правый потомок есть, продолжаем поиск вправо
        return self.find_max(node.right)

    # Рекурсивный метод для прямого обхода (preorder): корень -> левое поддерево -> правое поддерево
    def preorder_traversal(self, node=None, result=None):
        # Если result не передан, создаем новый список (первый вызов метода)
        if result is None:
            result = []  # Создаем список для хранения результатов обхода
            # Если node не передан, начинаем с корня
            if node is None:
                node = self.root
        
        # Если узел пустой (дерево пустое или достигли листа), прекращаем обход этой ветви
        if node is None:
            return result  # Возвращаем результат (может быть пустым списком)
        
        result.append(node.value)  # Добавляем значение текущего узла в результат
        self.preorder_traversal(node.left, result)  # Рекурсивно обходим левое поддерево
        self.preorder_traversal(node.right, result)  # Рекурсивно обходим правое поддерево
        return result  # Возвращаем список значений

    # Рекурсивный метод для центрированного обхода (inorder): левое поддерево -> корень -> правое поддерево
    def inorder_traversal(self, node=None, result=None):
        # Если result не передан, создаем новый список (первый вызов метода)
        if result is None:
            result = []  # Создаем список для хранения результатов обхода
            # Если node не передан, начинаем с корня
            if node is None:
                node = self.root
        
        # Если узел пустой (дерево пустое или достигли листа), прекращаем обход этой ветви
        if node is None:
            return result  # Возвращаем результат (может быть пустым списком)
        
        self.inorder_traversal(node.left, result)  # Рекурсивно обходим левое поддерево
        result.append(node.value)  # Добавляем значение текущего узла в результат
        self.inorder_traversal(node.right, result)  # Рекурсивно обходим правое поддерево
        return result  # Возвращаем список значений (будет отсортирован)

    # Рекурсивный метод для обратного обхода (postorder): левое поддерево -> правое поддерево -> корень
    def postorder_traversal(self, node=None, result=None):
        # Если result не передан, создаем новый список (первый вызов метода)
        if result is None:
            result = []  # Создаем список для хранения результатов обхода
            # Если node не передан, начинаем с корня
            if node is None:
                node = self.root
        
        # Если узел пустой (дерево пустое или достигли листа), прекращаем обход этой ветви
        if node is None:
            return result  # Возвращаем результат (может быть пустым списком)
        
        self.postorder_traversal(node.left, result)  # Рекурсивно обходим левое поддерево
        self.postorder_traversal(node.right, result)  # Рекурсивно обходим правое поддерево
        result.append(node.value)  # Добавляем значение текущего узла в результат
        return result  # Возвращаем список значений

    # Метод для обхода в ширину (level-order): обход по уровням слева направо
    def level_order_traversal(self):
        # Если дерево пустое, возвращаем пустой список
        if self.root is None:
            return []  # Возвращаем пустой список
        
        result = []  # Список для хранения результатов обхода
        queue = deque([self.root])  # Создаем очередь и добавляем корневой узел
        
        # Пока очередь не пуста, продолжаем обход
        while queue:
            node = queue.popleft()  # Извлекаем узел из начала очереди
            result.append(node.value)  # Добавляем значение узла в результат
            
            # Если у узла есть левый потомок, добавляем его в очередь
            if node.left is not None:
                queue.append(node.left)
            
            # Если у узла есть правый потомок, добавляем его в очередь
            if node.right is not None:
                queue.append(node.right)
        
        return result  # Возвращаем список значений

    # Метод для красивого вывода дерева (для визуализации)
    def display(self):
        # Если дерево пустое, выводим сообщение
        if self.root is None:
            print("Дерево пустое")
            return  # Выходим из функции
        
        # Вызываем вспомогательный метод для рекурсивного вывода
        self._display(self.root, "", True)

    # Вспомогательный рекурсивный метод для красивого вывода дерева
    def _display(self, node, prefix, is_last):
        # Если узел пустой, ничего не выводим
        if node is None:
            return  # Выходим из функции
        
        # Выводим текущий узел с соответствующим префиксом и балансом
        balance = self.get_balance(node)  # Получаем баланс-фактор узла
        print(prefix + ("└── " if is_last else "├── ") + str(node.value) + f" (h={node.height}, b={balance})")
        
        # Определяем префикс для дочерних узлов
        new_prefix = prefix + ("    " if is_last else "│   ")
        
        # Определяем, какие потомки есть у узла
        children = []  # Список для хранения непустых потомков
        if node.right is not None:
            children.append(node.right)  # Добавляем правого потомка
        if node.left is not None:
            children.append(node.left)  # Добавляем левого потомка
        
        # Рекурсивно выводим всех потомков
        for i, child in enumerate(children):
            # Определяем, является ли потомок последним
            is_last_child = (i == len(children) - 1)
            # Рекурсивно выводим потомка
            self._display(child, new_prefix, is_last_child)


# Главная функция для интерактивной работы с АВЛ деревом
def main():
    tree = AVLTree()  # Создаем пустое АВЛ дерево
    
    # Выводим приветственное сообщение и инструкции
    print("=" * 60)
    print("Интерактивная работа с АВЛ деревом (AVL Tree)")
    print("=" * 60)
    print("\nДоступные команды:")
    print("  1 - Вставить значение")
    print("  11 - Вставить список значений")
    print("  2 - Найти значение")
    print("  3 - Удалить значение")
    print("  4 - Найти минимум")
    print("  5 - Найти максимум")
    print("  6 - Прямой обход (preorder)")
    print("  7 - Центрированный обход (inorder)")
    print("  8 - Обратный обход (postorder)")
    print("  9 - Обход в ширину (level-order)")
    print("  10 - Показать дерево (с высотами и балансами)")
    print("  0 - Выход")
    print("=" * 60)
    
    # Основной цикл программы
    while True:
        try:
            # Запрашиваем у пользователя команду
            choice = input("\nВыберите команду (0-11): ").strip()
            
            # Обрабатываем команду "Выход"
            if choice == "0":
                print("До свидания!")
                break  # Выходим из цикла
            
            # Обрабатываем команду "Вставить значение"
            elif choice == "1":
                value = int(input("Введите значение для вставки: "))  # Запрашиваем значение
                if tree.insert(value):  # Пытаемся вставить значение
                    print(f"Значение {value} успешно вставлено (дерево автоматически сбалансировано)")  # Выводим сообщение об успехе
                else:
                    print(f"Значение {value} уже существует в дереве")  # Выводим сообщение, если значение уже есть
            
            # Обрабатываем команду "Вставить список значений"
            elif choice == "11":
                values_str = input("Введите значения через пробел или запятую: ").strip()
                # Пробуем разделить по запятой или пробелу
                if ',' in values_str:
                    values_list = [int(x.strip()) for x in values_str.split(',')]
                else:
                    values_list = [int(x.strip()) for x in values_str.split()]
                results = tree.insert_list(values_list)
                inserted = sum(1 for r in results if r)
                skipped = len(results) - inserted
                print(f"Вставлено значений: {inserted}, пропущено (уже существуют): {skipped}")
                print(f"Дерево автоматически сбалансировано")
            
            # Обрабатываем команду "Найти значение"
            elif choice == "2":
                value = int(input("Введите значение для поиска: "))  # Запрашиваем значение
                if tree.search(value):  # Ищем значение в дереве
                    print(f"Значение {value} найдено в дереве")  # Выводим сообщение, если найдено
                else:
                    print(f"Значение {value} не найдено в дереве")  # Выводим сообщение, если не найдено
            
            # Обрабатываем команду "Удалить значение"
            elif choice == "3":
                value = int(input("Введите значение для удаления: "))  # Запрашиваем значение
                if tree.delete(value):  # Пытаемся удалить значение
                    print(f"Значение {value} успешно удалено (дерево автоматически сбалансировано)")  # Выводим сообщение об успехе
                else:
                    print(f"Значение {value} не найдено в дереве")  # Выводим сообщение, если не найдено
            
            # Обрабатываем команду "Найти минимум"
            elif choice == "4":
                min_value = tree.find_min()  # Ищем минимальное значение
                if min_value is not None:  # Если минимум найден
                    print(f"Минимальное значение: {min_value}")  # Выводим его
                else:
                    print("Дерево пустое, минимум не найден")  # Выводим сообщение, если дерево пустое
            
            # Обрабатываем команду "Найти максимум"
            elif choice == "5":
                max_value = tree.find_max()  # Ищем максимальное значение
                if max_value is not None:  # Если максимум найден
                    print(f"Максимальное значение: {max_value}")  # Выводим его
                else:
                    print("Дерево пустое, максимум не найден")  # Выводим сообщение, если дерево пустое
            
            # Обрабатываем команду "Прямой обход"
            elif choice == "6":
                result = tree.preorder_traversal()  # Выполняем прямой обход
                print(f"Прямой обход (preorder): {result}")  # Выводим результат
            
            # Обрабатываем команду "Центрированный обход"
            elif choice == "7":
                result = tree.inorder_traversal()  # Выполняем центрированный обход
                print(f"Центрированный обход (inorder): {result}")  # Выводим результат
            
            # Обрабатываем команду "Обратный обход"
            elif choice == "8":
                result = tree.postorder_traversal()  # Выполняем обратный обход
                print(f"Обратный обход (postorder): {result}")  # Выводим результат
            
            # Обрабатываем команду "Обход в ширину"
            elif choice == "9":
                result = tree.level_order_traversal()  # Выполняем обход в ширину
                print(f"Обход в ширину (level-order): {result}")  # Выводим результат
            
            # Обрабатываем команду "Показать дерево"
            elif choice == "10":
                tree.display()  # Выводим дерево в красивом формате с высотами и балансами
            
            # Обрабатываем неверную команду
            else:
                print("Неверная команда! Пожалуйста, выберите число от 0 до 11.")  # Выводим сообщение об ошибке
        
        # Обрабатываем ошибку ввода (например, не число)
        except ValueError:
            print("Ошибка! Пожалуйста, введите корректное число.")  # Выводим сообщение об ошибке
        # Обрабатываем другие неожиданные ошибки
        except Exception as e:
            print(f"Произошла ошибка: {e}")  # Выводим сообщение об ошибке


# Точка входа в программу
if __name__ == "__main__":
    main()  # Запускаем главную функцию

